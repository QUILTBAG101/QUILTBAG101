    %body
        %nav.topBar#topBar
            %a.showMenu#showMenu{:href => "#topBar"}
                show menu
            %a.hideMenu#hideMenu{:href => "#showMenu"}
                hide menu
            %ul
                -articles.sort_by{ |i| [ i[:order] ]}.each do |post|
                    %li
                        %a{:href => "#" + post[:title].gsub(/\s+/, "")}
                            =post[:title]
                
        .content
            = yield
